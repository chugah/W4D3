<h1>Add a New Song</h1>
<hr/>

<% if @track && @track.errors.any? %>
  <div>
    <strong>Some issues with your song, please fix them: </strong>
    <ul>
      <% @track.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/tracks/new" class="form-horizontal">
  <div class="form-group">
    <label for="inputArtist" class="col-sm-1 control-label">Artist</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputArtist" placeholder="Artist" value="<%= @track && @track.artist %>"/>
    </div>
  </div>
  <div class="form-group">
    <label for="title" class="col-sm-1 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputTitle" placeholder="Title" value="<%= @track && @track.title %>"/>
    </div>
  </div>
  <div class="form-group">
    <label for="url" class="col-sm-1 control-label">URL</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputURL" placeholder="URL" value="<%= @track && @track.url %>"/>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <button type="submit" class="btn btn-default" value="Stick!">Add Song</button>
    </div>
  </div>
  <div >
    <div class="col-sm-offset-1 col-sm-10">
      <p><a href='/tracks'>View All Songs</a> </p>
    </div>
  </div>
</form>
